<h1>
  {{user.username}}
</h1>

<div class="container customers">
  <div class="row">
   <div class="col-sm-10 col-md-10 col-lg-10">
      <div class='card card1'>
        <img class="card-img-top" src="{{user.profilePic}}" alt='(Upload your photo in your "Edit my profile" section!)'>
        <div class="card-body">
          <p class="card-text">"{{user.bio}}"</p>
        </div>
      </div>
    </div>
 </div>
</div>


<div class="publicrevanddis">
<form action="/profile/publicProfile/{{user._id}}" method="POST" id="form-container">
  <div class="form-group">
  <label for="reviewText">Registra tu valoraci√≥n sobre {{user.username}}:</label>
  <input class="form-control" id="reviewText" type="text" name="reviewText" placeholder="Make a review to {{user.username}}">
  </div>
  <div class="form-group">
  <button class= "btn btn-primary" type="submit">Guardar</button>  
  </div>
  {{#if message }}
    <div class="message">{{ message }}</div>
  {{/if}}
</form>

<div class="form-group">
<a href="/discounts/{{user._id}}"><button class= "btn btn-primary" type="submit">Asignar un descuento a {{user.username}}</button></a>
</div>

<div>
  {{#each rev}}
  <h3>Valoraciones de este cliente:</h3>
  <p class='publicreviews'>"{{reviewText}}"</p>
  {{/each}} 
</div>
